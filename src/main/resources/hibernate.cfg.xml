<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hotelicus?serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="show_sql">true</property>
        <mapping class="hotelicus.entities.Clients"/>
        <mapping class="hotelicus.entities.Hotels"/>
        <mapping class="hotelicus.entities.Reports"/>
        <mapping class="hotelicus.entities.Reservations"/>
        <mapping class="hotelicus.entities.Rooms"/>
        <mapping class="hotelicus.entities.Services"/>
        <mapping class="hotelicus.entities.Users"/>
    </session-factory>
</hibernate-configuration>